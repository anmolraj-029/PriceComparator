<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            background-size: cover;
            color: #333;
        }

        .results-container {
            display: flex;
            flex-wrap: wrap;
        }

        .result-item {
            border: 1px solid #ddd;
            margin: 10px;
            padding: 15px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .result-item:hover {
            transform: translateY(-5px);
        }

        .name {
            font-weight: bold;
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .image img {
            max-width: 120px;
            height: auto;
            margin-top: 10px;
        }

        .offer-item {
            border-top: 1px solid #ddd;
            margin-top: 10px;
            padding-top: 10px;
        }

        .shop-name a {
            text-decoration: none;
            color: #007BFF;
            font-weight: bold;
        }

        .url a {
            text-decoration: none;
            color: #28A745;
        }
    </style>
</head>
<body style="background-image: url('https://source.unsplash.com/featured/?computerscience');"> <!-- Use Unsplash API for dynamic background image -->
    <div class="container">
        <div class="results-container">
            <% results.forEach(result => { %>
                <div class="result-item col-md-4">
                    <% if (result.content && result.content.name) { %>
                        <p class="name">Name: <%= result.content.name %></p>
                        <p class="image"> <img src="<%= result.content.image_url %>" alt="<%= result.content.name %>"></p>
        
                        <% result.content.offers.forEach(offer => { %>
                            <div class="offer-item">
                                <p class="shop-name">Shop Name: <a href="<%= offer.url %>" target="_blank"><%= offer.shop_name %></a></p>
                                <p class="price">Price: <%= offer.price %></p>
                                <p class="url">URL: <a href="<%= offer.url %>" target="_blank"><%= offer.url %></a></p>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="name">Name: N/A</p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
